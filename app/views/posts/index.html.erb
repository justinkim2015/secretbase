<% stylesheet_link_tag "index" %>

<div class="header">
  <h1 class="title">Secret Base</h1>
  <%= link_to "New Post", new_post_path, class: "link" %>
  <%= link_to "User Info", "/users/edit", class: "link" %>

  <% if user_signed_in? %>
    <%= button_to "Log out", destroy_user_session_path, method: :delete %>
  <% else %>
    <%= button_to "Log in", new_user_session_path%>
  <% end %>
</div>

<div class="main">
  <% @posts.each do |post| %>
    <div class="post">

      <div class="post_title"><%= post.title %></div>
      <div class="text"><%= post.body %></div>

      <% if user_signed_in? %>
        <div class="name"><%= post.user.username %></div>
      <% else %>
        <div class="name">Log in to see!</div>
      <% end %>

    </div>
  <% end  %>

</div>

<div class="footer">
  <p>Made for TheOdinProject by Justin Kim</p>
</div>
